                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">
    <changeSet id="2021-08-21-init-currencies-01" author="skharitonov">
        <insert schemaName="shop" tableName="currencies">
            <column name="code" type="varchar2" value="RUB"/>
            <column name="multiplier" valueNumeric="1"/>
            <column name="creation_date" valueDate="current_timestamp"/>
            <column name="last_update_date" valueDate="current_timestamp"/>
            <column name="version" valueNumeric="0"/>
        </insert>
        <rollback>
            <delete schemaName="shop" tableName="currencies">
                <where>code='RUB'</where>
            </delete>
        </rollback>
    </changeSet>

