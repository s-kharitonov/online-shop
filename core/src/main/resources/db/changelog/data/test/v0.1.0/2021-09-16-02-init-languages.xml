<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">
    <changeSet id="2021-09-16-init-languages-01" author="skharitonov">
        <insert schemaName="shop" tableName="languages">
            <column name="code" type="varchar2" value="RU"/>
            <column name="creation_date" valueDate="current_timestamp"/>
            <column name="last_update_date" valueDate="current_timestamp"/>
            <column name="version" valueNumeric="0"/>
        </insert>
        <rollback>
            <delete schemaName="shop" tableName="languages">
                <where>code='RU'</where>
            </delete>
        </rollback>
    </changeSet>

    <changeSet id="2021-09-16-init-languages-02" author="skharitonov">
        <insert schemaName="shop" tableName="languages">
