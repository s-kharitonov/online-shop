<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">
    <changeSet id="2021-09-16-init-product-features-table" author="skharitonov">
        <createTable tableName="product_features" schemaName="shop">
            <column name="id" type="bigserial">
                <constraints primaryKey="true"/>
            </column>
            <column name="product_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_product_features_product"
                             references="shop.products" deleteCascade="true"/>
            </column>
            <column name="language_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_product_features_language"
                             references="shop.languages" deleteCascade="true"/>
            </column>
            <column name="name" type="varchar(150)">
                <constraints nullable="false"/>
            </column>
            <column name="value" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="creation_date" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="last_update_date" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="version" type="int">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <rollback>
            <dropTable schemaName="shop" tableName="product_features"/>
        </rollback>
    </changeSet>
</databaseChangeLog>