<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">
    <changeSet id="2021-08-21-init-currencies-table" author="skharitonov">
        <createTable tableName="currencies" schemaName="shop">
            <column name="id" type="bigserial">
                <constraints primaryKey="true"/>
            </column>
            <column name="code" type="varchar(3)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="multiplier" type="numeric">
                <constraints nullable="false"/>
            </column>
            <column name="creation_date" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="last_update_date" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="version" type="int">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <rollback>
            <dropTable schemaName="shop" tableName="currencies"/>
        </rollback>
    </changeSet>

    <changeSet id="2021-08-21-add-index-to-currencies-code" author="skharitonov">
        <createIndex schemaName="shop" tableName="currencies" indexName="currencies_code_index">
            <column name="code"/>
        </createIndex>
        <rollback>
            <dropIndex schemaName="shop" tableName="currencies" indexName="currencies_code_index"/>
        </rollback>
    </changeSet>
</databaseChangeLog>